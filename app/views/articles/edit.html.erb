<h2>投稿の編集</h2>

<%= form_for @article do |f| %>

  <%= f.label :名前 %><br>
  <%= f.text_field :name %><br> <br>

  <%= f.label :タイトル %><br>
  <%= f.text_field :title, placeholder: 'タイトルを入力してください', style: 'width: 300px;' %>
  <% if @article.errors[:title].any? %>
    <%= 'タイトルが空白です' %>
  <% end %>
  <br> <br>

  <%= f.label :内容 %><br>
  <%= f.text_area :text, placeholder: '内容を入力してください', style: 'width: 300px; height: 100px;' %><br> <br>

  <%= f.submit '送信', data: { confirm: "この内容で送信してよろしいですか？" } %>

<% end %>